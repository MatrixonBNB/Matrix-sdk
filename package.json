{
  "name": "@matrixonbnb/sdk",
  "version": "0.4.9",
  "private": false,
  "description": "A toolkit for Matrix blockchain integration.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./constants": {
      "import": "./dist/esm/constants/index.js",
      "require": "./dist/cjs/constants/index.js",
      "types": "./dist/types/constants/index.d.ts"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js",
      "types": "./dist/types/utils/index.d.ts"
    },
    "./viem": {
      "import": "./dist/esm/viem/index.js",
      "require": "./dist/cjs/viem/index.js",
      "types": "./dist/types/viem/index.d.ts"
    },
    "./wagmi": {
      "import": "./dist/esm/wagmi/index.js",
      "require": "./dist/cjs/wagmi/index.js",
      "types": "./dist/types/wagmi/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.cjs.json && tsc",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "matrix",
    "blockchain",
    "viem",
    "sdk"
  ],
  "author": "Matrix <hello@matrixlabs.app>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MatrixonBNB/Matrix-sdk/issues"
  },
  "homepage": "https://github.com/MatrixonBNB/Matrix-sdk#readme",
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@types/react": "^19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.66.9",
    "@wagmi/core": "^2.16.5",
    "react": "^18.3.1",
    "solady": "^0.1.9",
    "typescript": ">=5.0.4",
    "viem": "^2.23.5",
    "wagmi": "^2.14.12"
  },
  "files": [
    "dist/**/*"
  ]
}
